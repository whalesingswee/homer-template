:root {
	--base-font-size: 16px;
	--base-line-height:   24px !default;
	--base-font-color:    #333333 !default;
	--base-link-color:    #62b3e7 !default;
	--base-heading-color: #181818 !default;
	--base-sub-heading-color: #808080 !default;
	--inner-wrap: 1140px;
	--md-wrap: 940px;
	--sm-wrap: 800px;
	--color-black: #000;
	--color-gray: #4A4A4A;
	--color-white: #F7F7F9;
	--font-default: "微軟正黑體", "Microsoft JhengHei", "微软雅黑", "Microsoft YaHei", Helvetica, Arial, sans-serif;
}
